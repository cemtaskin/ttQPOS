<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5sp"
        app:cardCornerRadius="3sp"

        android:layout_margin="3sp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5sp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/qr_content_item_act_date"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Tarih : 10.01.2021"
                    >
                </TextView>
                <TextView
                    android:id="@+id/qr_content_item_act_amount"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:text=" Tutar : 12.25 TL"
                    >
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/qr_content_item_ref_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="Ref No :20000012123"
                    android:layout_weight="1"
                    ></TextView>
                <TextView
                    android:id="@+id/qr_content_item_termimal_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:layout_weight="1"
                    android:text="Terminal ID :123"
                    ></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/qr_content_item_serial_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:layout_weight="1"
                    android:text="Serial ID :87999"
                    ></TextView>

                <TextView
                    android:id="@+id/qr_content_item_remote_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:layout_weight="1"
                    android:text="Remote ID :445"
                    ></TextView>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>